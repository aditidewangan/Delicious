<%- include("partials/header"); -%>

    <h1>COMPOSE</h1>

    <form action="/compose" method="post" enctype="multipart/form-data">
  <div class="form-group">
    <input  class="form-control" type="text" name="postName" placeholder="Enter your name">
  </div>
  <div class="form-group">
    <input class="form-control" type="Phone" name="postTitle" placeholder="Enter your food type (Thai, Indian, Chinese)" required>
  </div>
  <div class="form-group">
    <input class="form-control" type="Phone" name="postType" placeholder="Enter your food name" required>
  </div>
  <div class="form-group">
    <textarea  class="form-control" name="postRecipe" rows="4" cols="40" placeholder="Type a recipe...." required></textarea>
  </div>
  <div class="form-group">
  <input type="file" name="image" class="form-control-file" required>
  </div>
  <div>
    <button type="submit" class="btn btn-dark">Submit</button>
  </div>
</form>


<%- include("partials/footer"); -%>
